
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] user_data = null;
    var data_file = Server.MapPath("~/BD/fish.txt");
    if (File.Exists(data_file))
    {
        user_data = File.ReadAllLines(data_file);
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @section reg
        {
        <form id="register" method="post">
            <input type="text" name="login" placeholder="Логин" /> <br />
            <input type="password" name="password" placeholder="Пароль" /> <br />
            <input type="submit" value="Войти" />
        </form>
    }
        @if (IsPost)
        {
            foreach (var runer in user_data)
            {
                string[] text = runer.Split(',');

                if (Request["login"] == text[0] && Request["password"] == text[1])
                {
                    <p>Вы вошли</p>
                    <nav>
                        <ul>
                            <li>@Html.ActionLink("Главная", "Warframe")</li>
                        </ul>
                    </nav>
                }
            }
        }
        @section video
        {
            <div>
                <video class="video" autoplay loop>
                    <source src="~/Video/Warframe%20_%20We%20All%20Lift%20Together.mp4" type="video/mp4" />
                </video>
            </div>
        }
    </body>
</html>
